<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/blueback">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/blueback">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:orientation="vertical"
                android:backgroundTint="@color/blueback">

                <Button
                    android:id="@+id/btn_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_weight="0.3"
                    android:background="@drawable/content_btn"
                    android:text="programme overview"
                    android:textAllCaps="true"
                    android:textColor="@color/blueback"
                    android:textSize="30sp"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                />

                <Button
                    android:id="@+id/btn_cou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_weight="0.2"
                    android:background="@drawable/content_btn"
                    android:text="courses"
                    android:textAllCaps="true"
                    android:textColor="@color/blueback"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


                <Button
                    android:id="@+id/btn_dur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_weight="0.3"
                    android:background="@drawable/content_btn"
                    android:text="duration of study ＆ class schedule "
                    android:textAllCaps="true"
                    android:textColor="@color/blueback"
                    android:textSize="30sp"
                    android:fontFamily="casual"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/btn_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_weight="0.2"
                    android:background="@drawable/content_btn"
                    android:text="regulations ＆ syllabus"
                    android:textAllCaps="true"
                    android:textColor="@color/blueback"
                    android:textSize="30sp"
                    android:fontFamily="casual"
                    android:textStyle="bold"/>

            </LinearLayout>

    </FrameLayout>
</io.codetail.widget.RevealFrameLayout>