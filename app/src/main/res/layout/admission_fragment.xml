<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/blueback">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/blueback">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:backgroundTint="@color/blueback">

            <Button
                android:id="@+id/btn_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/content_btn"
                android:text="ADMISSION REQUIREMENTS"
                android:textAllCaps="true"
                android:textColor="@color/blueback"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/content_btn"
                android:text="ADMISSION PROCEDURES"
                android:textColor="@color/blueback"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/content_btn"
                android:text="COMPOSITION FEES"
                android:textColor="@color/blueback"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn_wor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/content_btn"
                android:text="WORDS FROM STUDENTS AND GRADUATES"
                android:textColor="@color/blueback"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn_ins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/content_btn"
                android:text="INFORMATION SESSION"
                android:textColor="@color/blueback"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/content_btn"
                android:text="FAQ"
                android:textColor="@color/blueback"
                android:textSize="30sp" />
        </LinearLayout>
        </ScrollView>
    </FrameLayout>
</io.codetail.widget.RevealFrameLayout>